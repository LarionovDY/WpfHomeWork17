<UserControl x:Class="WpfHomeWork17.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfHomeWork17"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="250"
             Name="ColorPicker">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />          
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Slider Name="redSlider" Minimum="0" Maximum="255" Grid.Row="0" VerticalAlignment="Center"/>
        <Slider Name="greenSlider" Minimum="0" Maximum="255" Grid.Row="1" VerticalAlignment="Center"/>
        <Slider Name="blueSlider" Minimum="0" Maximum="255" Grid.Row="2" VerticalAlignment="Center"/>
        <Rectangle Grid.Column="1" Grid.RowSpan="3" Width="50" Stroke="Black" StrokeThickness="1">
            <Rectangle.Fill>
                <SolidColorBrush/>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
